@model List<KProyecto.EF.ConsultarProductos_Result>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">


    <div class="card-body">
        <h4 class="card-title">Consula de Productos</h4>

        <hr><br />

        <div class="row">
            <div class="col-md-2">
            </div>
            <div class="col-md-8">

                @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                {
                    <div class="alert alert-warning text-center">
                        @ViewBag.Mensaje
                    </div>
                }

                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Descripción</th>
                        </tr>
                    </thead>
                    <tbody> 
                        @foreach (var item in Model) {  
                            <tr>
                                <td>@item.IdProducto</td>
                                <td>@item.Nombre</td>
                                <td>@item.Descripcion</td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 text-right pb-2 pr-4">
            <button class="btn btn-lg btn-info" type="submit">Procesar</button>
        </div>
    </div>

</div>