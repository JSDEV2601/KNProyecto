@model KProyecto.Models.Usuario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">

    @using (Html.BeginForm("CambiarContrasenna", "Usuario", FormMethod.Post, new { @class = "form-horizontal m-t-20" }))
    {
        <div class="card-body">
            <h4 class="card-title">Cambiar Contraseña</h4>

            <hr><br />

            <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8">

                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                    {
                        <div class="alert alert-warning text-center">
                            @ViewBag.Mensaje
                        </div>
                    }

                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Contraseña Anterior:</label>
                            @Html.TextBoxFor(x => x.ContrasennaAnterior, new { @type = "password", @class = "form-control form-control-lg" })
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Contraseña Nueva:</label>
                            @Html.TextBoxFor(x => x.Contrasenna, new { @type = "password", @class = "form-control form-control-lg" })
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 text-right pb-2 pr-4">
                <button class="btn btn-lg btn-info" type="submit">Procesar</button>
            </div>
        </div>
    }

</div>