@model KProyecto.Models.Autenticacion

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background:url(/Images/auth-bg.jpg) no-repeat center center;">
    <div class="auth-box">
        <div id="loginform">
            <div class="logo m-3">
                <span class="db">
                    <img src="~/Images/logo-icon.png" alt="logo" />
                </span>
                <h5 class="font-medium m-b-20">Recuperar Acceso</h5>
            </div>

            <div class="row">
                <div class="col-12">

                    @using (Html.BeginForm("RecuperarContrasenna", "Home", FormMethod.Post, new { @class = "form-horizontal m-t-20" }))
                    {

                        if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                        {
                            <div class="alert alert-warning text-center">
                                @ViewBag.Mensaje
                            </div>
                        }

                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="ti-user"></i></span>
                            </div>
                            @Html.TextBoxFor(x => x.Correo, new { @type = "email", @class = "form-control form-control-lg", @placeholder = "Correo Electrónico" })
                        </div>

                        <div class="form-group text-center">
                            <div class="col-xs-12 p-b-20">
                                <button class="btn btn-block btn-lg btn-info" type="submit">Procesar</button>
                            </div>
                        </div>

                        <div class="form-group m-b-0 m-t-10">
                            <div class="col-sm-12 text-center">
                                Si no tienes una cuenta <a href="@Url.Action("Registro","Home")" class="text-info m-l-5"><b>Regístrate</b></a>
                            </div>
                            <div class="col-sm-12 text-center">
                                Si ya tienes una cuenta <a href="@Url.Action("Index","Home")" class="text-info m-l-5"><b>Inicia Sesión</b></a>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>

    </div>
</div>